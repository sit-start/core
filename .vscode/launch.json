{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}",
      "justMyCode": false
    },
    {
      "name": "Python Debugger: sit",
      "type": "debugpy",
      "request": "launch",
      "program": "python/sitstart/app/sit/sit.py",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}",
      "justMyCode": false
    },
    {
      "name": "PyTest Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "--capture=no"],
      "justMyCode": false
    }
  ]
}
